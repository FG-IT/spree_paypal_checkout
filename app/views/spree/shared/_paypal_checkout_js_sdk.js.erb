<% paypal_payment = Spree::PaymentMethod.find_by(type: "Spree::Gateway::PayPalCheckout") %>
<% if paypal_payment&.auto_capture? %>
  <script data-turbolinks-track="reload" src='<%= "https://www.paypal.com/sdk/js?client-id=#{paypal_payment&.preferred_paypal_client_id}&currency=#{ENV['PYAPAL_EXPRESS_CURRENCY']}&commit=false&components=messages,buttons" %>'></script>
<% else %>
  <script data-turbolinks-track="reload" src='<%= "https://www.paypal.com/sdk/js?client-id=#{paypal_payment&.preferred_paypal_client_id}&currency=#{ENV['PYAPAL_EXPRESS_CURRENCY']}&commit=false&intent=authorize&components=messages,buttons" %>'></script>
<% end %>
